# IP Management System Environment Configuration
# Docker-only deployment - copy this file to .env and update values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=ip_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_change_in_production
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production-32-chars-minimum-length
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,*.bosch.com,*.rexroth.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# BOSCH REXROTH SPECIFIC CONFIGURATION
# =============================================================================
PLANT_CODE=BURSA
ORGANIZATION=Bosch Rexroth
SECURITY_COMPLIANCE_CHECK_DAYS=30

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
DEFAULT_RESERVED_START_IPS=6
DEFAULT_RESERVED_END_IPS=1
MAX_VLAN_ID=4094
MIN_VLAN_ID=1

# =============================================================================
# PORT MAPPINGS
# =============================================================================
# Backend API port (host:container)
API_PORT=8000

# Frontend port (host:container)
FRONTEND_PORT=3000

# Nginx proxy ports (for production profile)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend to connect to backend
REACT_APP_API_URL=http://localhost:8000/api/v1

# =============================================================================
# DOCKER IMAGE VERSIONS
# =============================================================================
PYTHON_VERSION=3.11
NODE_VERSION=18

# =============================================================================
# DEVELOPMENT SETTINGS (Optional)
# =============================================================================
# Set to true for development mode with hot reload
DEV_MODE=false

# Enable SQL query debugging (not recommended for production)
SQL_DEBUG=false