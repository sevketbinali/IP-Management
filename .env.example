# IP Management System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:secure_password_change_in_production@localhost:5432/ip_management
DB_PASSWORD=secure_password_change_in_production

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0

# Application Settings
SECRET_KEY=your-secret-key-change-in-production-must-be-32-chars-minimum
DEBUG=false
LOG_LEVEL=INFO

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,*.bosch.com,*.rexroth.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Bosch Rexroth Specific
PLANT_CODE=BURSA
ORGANIZATION=Bosch Rexroth
SECURITY_COMPLIANCE_CHECK_DAYS=30

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600

# Network Configuration
DEFAULT_RESERVED_START_IPS=6
DEFAULT_RESERVED_END_IPS=1
MAX_VLAN_ID=4094
MIN_VLAN_ID=1

# Development Settings (Development Only)
SQL_DEBUG=false
RELOAD_ON_CHANGE=true